{
  "name": "@cuuats/webmapgl",
  "private": false,
  "version": "0.2.0",
  "description": "Web map components using Stencil and Mapbox GL",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build --config stencil.prod.config.js",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache"
  },
  "dependencies": {
    "@ionic/core": "4.0.0-alpha.7",
    "@stencil/core": "0.9.7",
    "@stencil/router": "0.0.25",
    "@types/screenfull": "^3.3.1",
    "screenfull": "^3.3.2"
  },
  "devDependencies": {
    "@stencil/dev-server": "latest",
    "@stencil/sass": "^0.0.2",
    "@stencil/utils": "latest",
    "@types/dot": "^1.1.2",
    "@types/jest": "^21.1.1",
    "jest": "^21.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CUUATS/webmapgl.git"
  },
  "author": "CUUATS",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/CUUATS/webmapgl"
  },
  "homepage": "https://github.com/CUUATS/webmapgl",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
