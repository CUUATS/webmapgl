{
  "name": "@cuuats/webmapgl",
  "private": false,
  "version": "0.4.0",
  "description": "Web map components using Stencil and Mapbox GL",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npx stencil build --config stencil.prod.config.ts",
    "start": "npx stencil build --dev --watch --serve",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "dependencies": {
    "@ionic/core": "4.0.0-beta.5",
    "@stencil/core": "0.12.2",
    "@stencil/router": "0.0.25",
    "@types/node-polyglot": "^0.4.31",
    "@types/screenfull": "^3.3.1",
    "node-polyglot": "^2.2.2",
    "screenfull": "^3.3.2"
  },
  "devDependencies": {
    "@stencil/sass": "0.1.0",
    "@types/dot": "^1.1.2",
    "@types/jest": "^21.1.1",
    "jest": "^21.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CUUATS/webmapgl.git"
  },
  "author": "CUUATS",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/CUUATS/webmapgl"
  },
  "homepage": "https://github.com/CUUATS/webmapgl",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
